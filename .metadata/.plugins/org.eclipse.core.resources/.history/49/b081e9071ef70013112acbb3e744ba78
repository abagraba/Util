package com.mimvista.cloud.organizer.verifier.proui;

import java.awt.BorderLayout;

import javax.swing.Box;
import javax.swing.BoxLayout;
import javax.swing.JButton;
import javax.swing.JComponent;
import javax.swing.JPanel;
import javax.swing.border.EmptyBorder;

public class NavigationPanel extends JPanel {

	private static final long serialVersionUID = 1L;
	private static final int xmargin = 10;
	private static final int ymargin = 20;

	public NavigationPanel(JComponent content, JButton... buttons) {
		setLayout(new BorderLayout());
		add(content, BorderLayout.CENTER);
		JPanel buttonPanel = new JPanel();
		buttonPanel.setLayout(new BoxLayout(buttonPanel, BoxLayout.X_AXIS));
		buttonPanel.setBorder(new EmptyBorder(xmargin, ymargin, xmargin, ymargin));

		int i = 0;
		for (JButton button : buttons) {
			if (i != 0)
				VerifierUtil.addStrut(buttonPanel, 5);
			buttonPanel.add(button);
			i++;
		}
		add(buttonPanel, BorderLayout.SOUTH);
	}

	public NavigationPanel(JComponent content, Navigable navigable) {
		this(content, getButtons(navigable));
	}

	private static JButton[] getButtons(Navigable nav) {
		JButton[] buttons = new JButton[nav.numButtons()];
		for (int i = 0; i < buttons.length; i++)
			buttons[i] = nav.getButton(i);
		return buttons;
	}

}
