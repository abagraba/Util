package com.mimvista.cloud.organizer.verifier.proui;

import java.awt.BorderLayout;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.util.HashMap;

import javax.swing.JComponent;
import javax.swing.JPanel;
import javax.swing.SwingUtilities;

public abstract class SwapPanel extends JPanel {

	private static final long serialVersionUID = 1L;
	private JComponent def;
	private JComponent contentPane;

	public final ActionListener home = new ActionListener() {
		@Override
		public void actionPerformed(ActionEvent e) {
			swapTo(def);
		}
	};
	
	public SwapPanel(JComponent def) {
		setLayout(new BorderLayout());
		setDefault(def);
		swapTo(def);
	}
	
	public SwapPanel(){
		this(null);
	}

	public void swapTo(JComponent panel) {
		if (panel == null)
			panel = def;
		if (panel != contentPane) {
			SwingUtilities.invokeLater(new Runnable() {
				
				@Override
				public void run() {
			removeAll();
			this.contentPane = panel;
			add(contentPane, BorderLayout.CENTER);
			revalidate();
			repaint();
				}
			});
		}
	}
	
	public void setDefault(JComponent def){
		if (def == null)
			def = new JPanel();
		if (this.def == contentPane)
			swapTo(def);
		this.def = def;
	}

}
