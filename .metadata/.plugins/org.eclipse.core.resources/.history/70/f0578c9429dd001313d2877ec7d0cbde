package Organizer.UI;

import java.awt.Dimension;
import java.awt.Graphics;
import java.awt.Insets;

import javax.swing.JComponent;

public class LoadingBar extends JComponent {

	private float progress = 0;

	public LoadingBar(int minWidth, int minHeight, int margin) {
		Dimension dim = new Dimension(minWidth, minHeight);
		setMinimumSize(dim);
		setPreferredSize(dim);
		setOpaque(false);
	}

	public void setProgress(float progress) {
		this.progress = progress;
		repaint();
	}

	public void paintComponent(Graphics g) {
		Insets inset = getInsets();
		g.setColor(ColorTheme.borderColor);
		g.drawRect(inset.left, inset.top, getWidth() - 1 - inset.right, getHeight() - 1 - inset.bottom);
		g.setClip(0, 0, (int) (getWidth() * progress), getHeight());
		g.setColor(ColorTheme.loadingColor);
	}

}
