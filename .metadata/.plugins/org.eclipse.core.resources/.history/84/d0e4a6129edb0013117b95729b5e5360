import java.io.File;
import java.io.FileInputStream;
import java.io.IOException;
import java.io.InputStream;


public class PNGReader {

	private byte[] pngsig = new byte[]{(byte) 0x89, 0x50, 0x4E, 0x47, 0x0D, 0x0A, 0x1A, 0x0A};
	
	public void readPNG(File f) throws IOException{
		InputStream is = new FileInputStream(f);
		Chunk chunk;
		byte[] sig = new byte[pngsig.length];
		Chunker.readBytes(is, sig);
		for (int i = 0; i < sig.length; i++) {
			if (sig[i] != pngsig[i]){
				System.err.println("Invalid PNG Sginature");
				System.exit(-1);
			}
		}
		System.out.println("Valid PNG signature.");
		while ((chunk = Chunker.nextChunk(is)) != null){
			System.out.println(chunk);
			chunk = null;
		}
		is.close();
	}
	
	
	public static void main(String[] args){
		
	}
	
}
