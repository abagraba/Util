package util.ui.swing;

import java.awt.Dimension;

import javax.swing.JComponent;
import javax.swing.JPanel;

public class ImageDisplay extends JComponent {

	public static final int FIXED_SIZE = 0;
	public static final int SCALE_WITH_IMAGE = 1;

	public ImageDisplay(int width, int height, int scalable) {
		Dimension size = new Dimension(w, h);
		setMinimumSize(size);
		if (scalable == FIXED_SIZE) {
			setMaximumSize(size);
			setPreferredSize(size);
		}
	}
}
