public class IHDRChunk extends Chunk {

	public static void register() {
		ChunkRegistry.registerChunk("IHDR", IHDRChunk.class);
		System.out.println("IHDR Chunk Registered.");
	}

	public IHDRChunk(int size, byte[] header, byte[] data, int crc) {
		super(size, header, data, crc);
	}

	protected String chunkDescription() {
		if (size != 13)
			return "\tInvalid IHDR Chunk";
		int width = (data[0] << 24) + (data[1] << 16) + (data[2] << 8)
				+ data[3];
		int height = (data[4] << 24) + (data[5] << 16) + (data[6] << 8)
				+ data[7];
		return pad("Width:") + width + " pixels\n" + pad("Height:") + height
				+ " pixels\n" + pad("Bit Depth:") + data[8]
				+ " bits\n" + pad("Color Type:") + data[9]
				+ "\n" + pad("Compression Method:") + data[10]
				+ "\n\tFilter Method:\t\t" + data[11]
				+ "\n\tInterlace Method:\t" + data[12];
	}

}
